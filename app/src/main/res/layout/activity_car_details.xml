<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".CarDetails">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/primary"
            app:expandedTitleMarginStart="10dp"
            app:expandedTitleMarginEnd="26dp"

            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:src="@drawable/logomain">

            </ImageView>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/title"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:text="Add Car for Rent"/>
            </androidx.appcompat.widget.Toolbar>



        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarFadeDuration="300"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin1"
            android:orientation="vertical"
            android:scrollbarDefaultDelayBeforeFade="450">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="Details"

                android:textSize="24sp"
                android:textStyle="italic" />


            <com.example.autoleave.MyTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.example.autoleave.MyTextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:text="Title"/>



            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Car for Sale"
                android:layout_margin="@dimen/margin4"
                android:id="@+id/price"
                android:inputType="text">

            </com.google.android.material.textfield.TextInputEditText>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:text="Price"/>



            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin3"
                android:hint="350.000 Egp"
                android:id="@+id/model"
                android:inputType="number">
            </com.google.android.material.textfield.TextInputEditText>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:text="Model"/>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin3"
                android:hint="Volvo"
                android:id="@+id/modelcar"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:text="Body Type"/>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin3"
                android:hint="Gear Type"
                android:id="@+id/gear_type"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:text="Year"/>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin3"
                android:hint="2019"
                android:id="@+id/year"
                android:inputType="number">
            </com.google.android.material.textfield.TextInputEditText>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:text="Transmission Type"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/killometers"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Automatic"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Manual"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>
                 </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:text="Rental Option"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/rental"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Driver"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Without Driver"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>
            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:layout_marginTop="10dp"
                android:text="Description"/>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin3"
                android:hint="Car Details"
                android:id="@+id/color"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:layout_marginTop="20dp"
                android:text="Add Location"/>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin3"
                android:hint="Elharam"
                android:id="@+id/body_type"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:text="Name"/>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin3"
                android:hint="Mohamed Farid"
                android:id="@+id/tire_type"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:text="Email"/>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin3"
                android:hint="jodicar.com@gmail.com"
                android:id="@+id/wheel"
                android:inputType="textEmailAddress">
            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:text="Phone Number"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin3"
                android:hint="01xxxxxxxxx"
                android:id="@+id/extra_features"
                android:inputType="phone">
            </com.google.android.material.textfield.TextInputEditText>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B33434"
                android:text="Contact me by"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Phone"
                    android:layout_margin="5dp"

                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Email"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Chat"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Both"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>

            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btn_submit"
                android:layout_marginBottom="50dp"
                android:text="Submit"
                android:backgroundTint="@color/colorAccent"
                android:layout_height="70dp">

            </Button>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>